<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="v1-02-001" author="vitalegi">
        <createTable tableName="discord_server_whitelist">
            <column name="discord_server_id" type="varchar(100)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="discord_server_whitelist_pk"/>
            </column>
            <column name="allowed" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(500)" />
            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-02-010" author="vitalegi">
        <createTable tableName="discord_server_limits">
            <column name="discord_server_limits_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="discord_server_limits_pk"/>
            </column>
            <column name="discord_server_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_max_total_characters" type="int" />
            <column name="monthly_max_total_characters_per_user" type="int" />

            <column name="creation_date" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
            <column name="last_update" type="timestamp without time zone">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
